@using FountainFlowUI.Models
@model ArchetypeViewModel

<div class="modal fade" id="createArchetypeModal" tabindex="-1" aria-labelledby="createArchetypeModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createArchetypeModalLabel">Create New Archetype</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createArchetypeForm">
                    <div class="mb-3">
                        <label for="Domain" class="form-label required">Domain</label>
                        <input type="text" class="form-control" id="Domain" name="Domain" required>
                        <div class="invalid-feedback" data-valmsg-for="Domain"></div>
                    </div>

                    <div class="mb-3">
                        <label for="Description" class="form-label required">Description</label>
                        <textarea class="form-control" id="Description" name="Description" rows="3" required></textarea>
                        <div class="invalid-feedback" data-valmsg-for="Description"></div>
                    </div>

                    <div class="mb-3">
                        <label for="Architect" class="form-label required">Architect</label>
                        <input type="text" class="form-control" id="Architect" name="Architect" required>
                        <div class="invalid-feedback" data-valmsg-for="Architect"></div>
                    </div>

                    <div class="mb-3">
                        <label for="ExternalLink" class="form-label">External Link</label>
                        <input type="url" class="form-control" id="ExternalLink" name="ExternalLink">
                        <div class="invalid-feedback" data-valmsg-for="ExternalLink"></div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Icon</label>
                        <div id="iconDropzone" class="dropzone">
                            <div class="dz-message" data-dz-message>
                                <span>Drop icon file here or click to upload</span>
                                <small class="text-muted d-block">Accepts PNG, JPG, or GIF files (Max 2MB)</small>
                            </div>
                        </div>
                        <input type="hidden" id="Icon" name="Icon">
                        <div class="invalid-feedback" data-valmsg-for="Icon"></div>
                    </div>
                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveArchetype">
                    <i class="fas fa-save me-1"></i> Save Archetype
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .required:after {
        content: " *";
        color: red;
    }
</style>